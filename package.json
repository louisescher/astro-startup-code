{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@10.15.0",
	"license": "MIT",
	"author": {
		"name": "Louis Escher",
		"url": "https://louisescher.dev"
	},
	"type": "module",
	"scripts": {
		"build": "pnpm --filter astro-startup-code build",
		"playground:build": "pnpm build && pnpm --filter playground build",
		"playground:start": "pnpm --filter playground start",
		"dev": "pnpm --stream -r -parallel dev",
		"changeset": "changeset",
		"ci:prepublish": "pnpm build",
		"ci:install": "pnpm install --frozen-lockfile",
		"ci:version": "pnpm changeset version",
		"ci:publish": "pnpm changeset publish",
		"astro": "pnpm --filter playground astro"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.1",
		"@changesets/cli": "2.28.1",
		"@changesets/config": "3.1.1",
		"@changesets/write": "0.4.0"
	}
}